<h1>My porfolio</h1>

<h3>Seach for Stocks</h3>
<div id="stock-lookup">
    <%= form_tag search_stocks_path, remote: true, method: :get, id: "stock-lookup-form" do %>
        <div class="form-group row no padding text-center col-md-12">
            <div class="col-md-10">
                <!-- :stock is a name we decide to put-->
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofucus: true, class: "form-control seach-box input-lg" %>
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                <i class="fa fa-search"></i> Look up a stock
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="results">
    <%= render 'result' %>
</div>